@model FerreteriaWebApp.Models.ViewModels.CardsDashboard

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="container">
                <div class="row">
                    <!--Card 1-->
                    <div class="card shadow m-2 bg-primary text-light  opacity-75 " style="width: 20rem;">
                        
                        <div class="card-body ">
                            <h5 class="card-title mb-2">Productos</h5>
                            <hr />
                            <div class="row">
                                <div class="col-md-8">
                                    <h1 class="h1" style="font-size: 3.5rem;">@Model.cantidadProductos</h1>
                                </div>
                                <div class="col-md-4">
                                   
                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
                                        <path d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.37 2.37 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0M1.5 8.5A.5.5 0 0 1 2 9v6h1v-5a1 1 0 0 1 1-1h3a1 1 0 0 1 1 1v5h6V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5M4 15h3v-5H4zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1zm3 0h-2v3h2z" />
                                    </svg>
                                </div>
                               
                            </div>
                           
                            <p class="fs-6 disabled card-text text-secondary text-opacity-75 text-light">Muestra el total de productos en stock</p>
                           
                        </div>
                    </div>
                    <!--Card 2-->
                    <div class="card shadow m-2 bg-success text-light opacity-75" style="width: 20rem;">
                        
                        <div class="card-body">
                            <h5 class="card-title">Ventas</h5>
                            <hr />
                            <div class="row">
                                <div class="col-md-8">
                                    <h1 class="h1" style="font-size: 3.5rem;">@Model.cantidadVentas.ToString()</h1>
                                </div>
                                <div class="col-md-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-currency-dollar" viewBox="0 0 16 16">
                                        <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73z" />
                                    </svg>
                                  
                                </div>

                            </div>

                            <p class="fs-6 disabled card-text text-secondary text-opacity-75 text-light">Muestra el total de productos en stock</p>

                        </div>
                    </div>
                    <!--Card 2-->
                    <div class="card shadow m-2 bg-danger text-light opacity-75" style="width: 20rem;">

                        <div class="card-body">
                            <h5 class="card-title">Clientes</h5>
                            <hr />
                            <div class="row">
                                <div class="col-md-8">
                                    <h1 class="h1" style="font-size: 3.5rem;">@Model.cantidadClientes.ToString()</h1>
                                </div>
                                <div class="col-md-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                    </svg>
                                </div>

                            </div>

                            <p class="fs-6 disabled card-text text-secondary text-opacity-75 text-light">Muestra el total de productos en stock</p>

                        </div>
                    </div>
                </div>
               
            </div>

            <!--Contenido despues del card -->
            
            <div class="row">
                <div class="col-md-4">
                    <div class="mt-5 pb-2 shadow" style="padding-right:2rem; padding-left:1rem;">
                        <h3 class=" pt-3 mb-0">Top 10 productos</h3>
                        <p class="text-secondary">Stock menores que 10 </p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Stock</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int numeracion = 0;
                                    foreach (var item in Model.oProductos)
                                    {
                                        numeracion++;
                                        <tr>
                                            <th scope="row">@numeracion</th>
                                            <td>@item.Nombre</td>
                                            <td>@item.Stok</td>

                                        </tr>
                                    }
                                }



                            </tbody>
                           
                        </table>
                  
                            <p class="text-end">
                                <a class="icon-link icon-link-hover " href="#">
                                    Ver mas
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8" />
                                    </svg>
                            </p>
                           
                        </a>
                   
                        
                    </div>

                </div>
                <div class="col-md-8">
                    <div class="mt-5 p-4 shadow">
                        <h2 mb-0>Detalles de ventas</h2>
                        <hr/>
                        @{
                            DateTime fechaActual = DateTime.Now;
                            string fechaLarga = fechaActual.ToLongDateString();
                            <p class="text-end">Ventas del dia: <label class="text-secondary">@fechaLarga</label>  </p>
                    
                        }
                        @{
                           
                            if (Model.oDetallesVentas.Count == 0)
                            {
                                <div class="mx-auto mt-5 opacity-50 " style="width: 100px;">

                                    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-emoji-astonished" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                        <path d="M7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5m4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5M4.884 4.022a2 2 0 0 1 1.458-.048.5.5 0 0 0 .316-.948 3 3 0 0 0-2.167.077 3.1 3.1 0 0 0-.773.478q-.036.03-.07.064l-.002.001a.5.5 0 0 0 .707.708l-.001.002.001-.002a2 2 0 0 1 .122-.1 2 2 0 0 1 .41-.232Zm6.232 0a2 2 0 0 0-1.458-.048.5.5 0 1 1-.316-.948 3 3 0 0 1 2.168.077 3 3 0 0 1 .773.478l.07.064v.001a.5.5 0 0 1-.706.708l.002.002-.002-.002a2 2 0 0 0-.122-.1 2 2 0 0 0-.41-.232ZM8 10c-.998 0-1.747.623-2.247 1.246-.383.478.08 1.06.687.98q1.56-.202 3.12 0c.606.08 1.07-.502.687-.98C9.747 10.623 8.998 10 8 10" />
                                    </svg>

                                </div>
                                <p class="text-center text-secondary">Aun no se ha realizado una venta por este dia</p>
                            }else
                            {
                                int numerListaDetalle = 0;
                                decimal? total = 0;
                                Model.oDetallesVentas.ForEach(dv => total = dv.SubTotal + total);
                                <div>
                                    <div>
                                        <p>Total: $@total</p>
                                    </div>
                                    <div>
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col">Nombre</th>
                                                    <th scope="col">Producto</th>
                                                    <th scope="col">Precio</th>
                                                    <th scope="col">Cantidad</th>
                                                    <th scope="col">Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.oDetallesVentas)
                                                {
                                                    numerListaDetalle++;
                                                    if (item.IdVentaNavigation == null || item.IdProductoNavigation== null)
                                                    {
                                                        item.IdVentaNavigation = new Venta();
                                                        item.IdProductoNavigation = new Producto();
                                                    }
                                                    <tr>
                                                        <th scope="row">@numerListaDetalle</th>
                                                        <td>@item.IdVentaNavigation.NombreCliente</td>
                                                        <td>@item.IdProductoNavigation.Nombre</td>
                                                        <td>@item.PrecioVenta</td>
                                                        <td>@item.Cantidad</td>
                                                        <td>$@item.SubTotal</td>
                                                    </tr>
                                                }
                                                

                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            }
                        }
                        <p class="text-end">
                            <a class="icon-link icon-link-hover " href="#">
                                Ver mas detallada las ventas
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8" />
                                </svg>
                        </p>
                        </div>
                </div>
            </div>

        </div>
        
    </div>
</div>